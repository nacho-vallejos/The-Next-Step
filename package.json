{
  "name": "the-next-step",
  "version": "1.0.0",
  "description": "Sitio web seguro de consultorÃ­a legal The Next Step",
  "main": "dist/server/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server/server.ts",
    "build": "tsc",
    "start": "node dist/server/server.js",
    "start:prod": "NODE_ENV=production node dist/server/server.js",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "sbom": "cyclonedx-npm --output-file artifacts/sbom.json",
    "scan:secrets": "gitleaks detect --source . --verbose",
    "depcheck": "depcheck --ignores='@types/*,typescript'",
    "security:check": "npm run audit && npm run scan:secrets && npm run depcheck",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "prepare": "husky install"
  },
  "keywords": [
    "legal",
    "consulting",
    "security",
    "cybersecurity"
  ],
  "author": "The Next Step",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "csurf": "^1.11.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.11",
    "bcrypt": "^5.1.1",
    "argon2": "^0.31.2",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "express-validator": "^7.0.1",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "dompurify": "^3.0.8",
    "jsdom": "^23.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/cookie-parser": "^1.4.6",
    "@types/express-session": "^1.17.10",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/mime-types": "^2.1.4",
    "@types/compression": "^1.7.5",
    "@types/hpp": "^0.2.5",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@cyclonedx/cyclonedx-npm": "^1.16.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "depcheck": "^1.4.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
